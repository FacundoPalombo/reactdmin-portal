{
  "name": "reactdmin-portal",
  "version": "1.0.0",
  "description": "Una aplicación para distribución de productos y compraventa de los mismos, hecho en React con Redux",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "testw": "jest --watch",
    "dev": "webpack-dev-server",
    "build": "webpack --mode=production",
    "lint": "eslint src/*.js --fix",
    "storybook": "start-storybook",
    "storycheck": "start-storybook --smoke-test"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:FacundoPalombo/reactdmin-portal.git"
  },
  "keywords": [
    "react",
    "redux",
    "portal",
    "ventas"
  ],
  "author": "Facundo Palombo",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^3.6.1",
    "dotenv": "^8.2.0",
    "history": "^4.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-icons": "^3.8.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-regenerator": "^7.7.5",
    "@babel/preset-env": "^7.7.7",
    "@babel/preset-react": "^7.7.4",
    "@storybook/react": "^8.2.9",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.2",
    "@types/react": "^16.9.17",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^3.1.0",
    "jest": "^29.7.0",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "sass-loader": "^8.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|json|scss|sass|css)": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/__test__/setupTest.js"
    ],
    "moduleNameMapper": {
      "\\.(scss|sass|css)": "<rootDir>/src/utils/mocks/sassMocks.js"
    }
  }
}
